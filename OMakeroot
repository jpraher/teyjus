# The OMake build only supports cygwin on win32
if $(mem $(OSTYPE), Win32 Cygwin)
    OSTYPE = Cygwin
    GCC_FOUND = true
    GXX_FOUND = true
    export

open build/C
open build/OCaml

DERIVING_SYNTAX=$(dir deps/deriving/syntax)

Deriving(module) =
    section
        OCAMLOPTFLAGS += -pp $(DERIVING_SYNTAX)/deriving
        OCAMLDEPFLAGS += -pp $(DERIVING_SYNTAX)/deriving
        $(module).cmi:
        $(module).cmo:
        $(module).o:
        $(module).cmx:


.SUBDIRS: .
